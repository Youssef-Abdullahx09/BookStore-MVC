@model CoverType
<form method="post">
    <div class="border mt-4 p-3">
        <div class="row pb-2">
            <h2 class="text-primary">Add Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Add</button>
        <a asp-controller="CoverType" asp-action="GetAll" class="btn btn-secondary" style="width: 150px">Back To List</a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
